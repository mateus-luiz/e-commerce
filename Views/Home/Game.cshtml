@model GameModel;

<style>
    img{
        max-height: 500px;
    }
</style>
<div class="container row">
    <img class="col-sm-8 img-fluid" src="@Model.ArtUrl">
    <div class="col-sm-4">
        <h3>@Model.Name</h3>
        <p>@Model.Description</p>
        <div class="d-flex justify-content-between media">
            <h4 class="align-self-center">$ @Model.Price</h4>
            <a class="btn btn-outline-primary" role="button">Buy</a>
        </div>
    </div>
</div>