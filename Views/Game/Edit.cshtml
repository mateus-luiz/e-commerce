@model GameModel;

<div>
    <form asp-controller="Game" asp-action="Edit" method="post">
        <div hidden>
            <input asp-for="Id"></input>
        </div>
        <div class="form-group">
            <label for="fName">Name</label>
            <input type="text" asp-for="Name" class="form-control" id="fName" value="@Model.Name">
        </div>
        <div class="form-group">
            <label for="fPrice">Price</label>
            <input type="number" asp-for="Price" class="form-control" id="fPrice" value="@Model.Price">
        </div>
        <div class="form-group">
            <label for="fDev">Developer</label>
            <input type="text" asp-for="Developer" class="form-control" id="fDev" value="@Model.Developer">
        </div>
        <div class="form-group">
            <label for="fArt">ArtDir</label>
            <input type="text" asp-for="ArtDir" class="form-control" id="fArt" value="@Model.ArtDir">
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <a class="btn btn-outline-danger" role="button" asp-controller="Game" asp-action="Index">Cancel</a>
    </form>
</div>